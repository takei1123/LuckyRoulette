@page "/prefectures"
@using System.Threading

<PageTitle>都道府県ガチャ</PageTitle>

<div class="japan-container">
    <div class="header-area">
        <h1>🗾 都道府県ガチャ</h1>
        <p>次はどこに行く？ 対象を選んで、運命の場所を決めよう！</p>
    </div>

    <div class="result-card">
        <div class="result-label">運命の場所は...</div>
        <div class="result-text @(isShuffling ? "shuffling" : "determined")">
            @CurrentPrefecture
        </div>
    </div>

    <div class="action-area">
        <button class="btn-gacha" @onclick="DrawPrefecture" disabled="@(isShuffling || !PrefectureList.Any(p => p.IsSelected))">
            @if (isShuffling)
            {
                <span>抽選中...</span>
            }
            else if (!PrefectureList.Any(p => p.IsSelected))
            {

                <span>対象を選んで！</span>
            }
            else
            {

                <span>ガチャを回す！</span>
            }
        </button>
    </div>

    <div class="settings-box">
        <div class="settings-header">
            <h3>📍 抽選対象を選択 (@(PrefectureList.Count(p => p.IsSelected)) / 47)</h3>
            <div class="bulk-buttons">
                <button class="btn-sm" @onclick="SelectAll">全選択</button>
                <button class="btn-sm" @onclick="DeselectAll">全解除</button>
            </div>
        </div>

        <div class="prefecture-grid">
            @foreach (var pref in PrefectureList)
            {
                <label class="pref-item @(pref.IsSelected ? "active" : "")">
                    <input type="checkbox" @bind="pref.IsSelected" />
                    @pref.Name
                </label>
            }
        </div>
    </div>
</div>

@code {
    // 都道府県ごとの設定を持つクラス
    class PrefectureItem
    {
        public string Name { get; set; } = "";
        public bool IsSelected { get; set; } = true;
    }

    // 修正: 変数名を Prefectures から PrefectureList に変更して、クラス名との衝突を回避
    private List<PrefectureItem> PrefectureList = new List<PrefectureItem>();

    private string CurrentPrefecture = "？？？";
    private bool isShuffling = false;
    private Random random = new Random();

    // 初期化時にリストを作成
    protected override void OnInitialized()
    {
        var names = new[]
        {
            "北海道", "青森県", "岩手県", "宮城県", "秋田県", "山形県", "福島県",
            "茨城県", "栃木県", "群馬県", "埼玉県", "千葉県", "東京都", "神奈川県",
            "新潟県", "富山県", "石川県", "福井県", "山梨県", "長野県", "岐阜県",
            "静岡県", "愛知県", "三重県", "滋賀県", "京都府", "大阪府", "兵庫県",
            "奈良県", "和歌山県", "鳥取県", "島根県", "岡山県", "広島県", "山口県",
            "徳島県", "香川県", "愛媛県", "高知県", "福岡県", "佐賀県", "長崎県",
            "熊本県", "大分県", "宮崎県", "鹿児島県", "沖縄県"
        };

        foreach (var name in names)
        {
            // 修正: Prefectures → PrefectureList
            PrefectureList.Add(new PrefectureItem { Name = name, IsSelected = true });
        }
    }

    // 全選択
    private void SelectAll()
    {
        // 修正: Prefectures → PrefectureList
        foreach (var p in PrefectureList) p.IsSelected = true;
    }

    // 全解除
    private void DeselectAll()
    {
        // 修正: Prefectures → PrefectureList
        foreach (var p in PrefectureList) p.IsSelected = false;
    }

    // ガチャ実行
    private async Task DrawPrefecture()
    {
        // 修正: Prefectures → PrefectureList
        var targets = PrefectureList.Where(p => p.IsSelected).ToList();

        if (isShuffling || targets.Count == 0) return;

        isShuffling = true;

        // ドラムロール演出
        int loopCount = 20;
        for (int i = 0; i < loopCount; i++)
        {
            CurrentPrefecture = targets[random.Next(targets.Count)].Name;
            StateHasChanged();
            await Task.Delay(50 + (i * 10));
        }

        isShuffling = false;
    }
}

