@page "/"
@using System.Threading

<PageTitle>Custom Roulette</PageTitle>

<div class="casino-table">
    <div class="title-area">
        <h1>🖊️ カスタム・ルーレット</h1>
        <p>下のボックスに項目を入力してください（改行で区切る）</p>
    </div>

    <div class="input-area">
        <textarea @bind="InputText" @bind:event="oninput" placeholder="ここに項目を入力&#10;例：&#10;ラーメン&#10;カレー&#10;寿司"></textarea>
    </div>

    <div class="roulette-container">
        <div class="marker">▼</div>

        <div class="wheel-border">
            <div class="wheel" style="transform: rotate(@(rotationAngle)deg); transition: transform @(transitionSeconds)s cubic-bezier(0.25, 0.1, 0.25, 1);">
                @for (int i = 0; i < 8; i++)
                {
                    <div class="segment" style="transform: rotate(@(i * 45)deg)">
                        <div class="text-container">
                            <span class="text">@(GetDisplayItem(i))</span>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <button class="btn-spin" @onclick="SpinWheel" disabled="@isSpinning">
        @if (isSpinning)
        {
            <span>回転中...</span>
        }
        else
        {

            <span>スタート！</span>
        }
    </button>
</div>

@if (showResult)
{
    <div class="modal-overlay" @onclick="CloseModal">
        <div class="modal-content">
            <h2>結果発表</h2>
            <div class="result-text">@hitItem</div>
            <button class="btn-close" @onclick="CloseModal">閉じる</button>
        </div>
    </div>
}

@code {
    // 初期値
    private string InputText = "大吉\n中吉\n小吉\n吉\n末吉\n凶\n大凶\n激レア";

    private double rotationAngle = 0;
    private double transitionSeconds = 0;
    private bool isSpinning = false;
    private bool showResult = false;
    private string hitItem = "";
    private Random random = new Random();

    // 入力されたテキストをリスト化する
    private List<string> GetInputList()
    {
        if (string.IsNullOrWhiteSpace(InputText)) return new List<string> { "項目を入れて" };

        // 改行コードで分割して空行を削除
        return InputText.Split(new[] { '\r', '\n' }, StringSplitOptions.RemoveEmptyEntries).ToList();
    }

    // 8つのスロットに項目を割り当てる（項目が少ない場合は繰り返す）
    private string GetDisplayItem(int index)
    {
        var list = GetInputList();
        if (list.Count == 0) return "";
        return list[index % list.Count]; // 剰余演算でループさせる
    }

    private async Task SpinWheel()
    {
        if (isSpinning) return;

        isSpinning = true;
        showResult = false;

        int extraSpin = random.Next(0, 360);
        rotationAngle += 1800 + extraSpin;

        transitionSeconds = 4;
        StateHasChanged();

        await Task.Delay(4000);

        CalculateResult(rotationAngle);
        isSpinning = false;
        showResult = true;
    }

    private void CalculateResult(double finalAngle)
    {
        double normalized = finalAngle % 360;
        double corrected = (360 - normalized + 22.5) % 360;
        int index = (int)(corrected / 45);

        // 当たった場所の文字を取得
        hitItem = GetDisplayItem(index);
    }

    private void CloseModal()
    {
        showResult = false;
    }
}

