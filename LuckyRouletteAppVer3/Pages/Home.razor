@page "/"
@using System.Threading

<PageTitle>Dynamic Roulette</PageTitle>

<div class="casino-table">
    <div class="title-area">
        <h1>🎯 完全カスタム・ルーレット</h1>
        <p>項目を入れると、その数に合わせて自動で分割されます</p>
    </div>

    <div class="input-area">
        <textarea @bind="InputText" @bind:event="oninput" placeholder="（例）&#10;焼肉&#10;寿司&#10;パスタ"></textarea>
    </div>

    <div class="roulette-container">
        <div class="marker">▼</div>
        
        <div class="wheel-border">
            <div class="wheel" style="transform: rotate(@(rotationAngle)deg); transition: transform @(transitionSeconds)s cubic-bezier(0.25, 0.1, 0.25, 1); background: @GetConicGradient();">
                
                @for (int i = 0; i < GetInputList().Count; i++)
                {
                    // 1区画の角度
                    double stepAngle = 360.0 / GetInputList().Count;
                    // 文字を配置する角度（区画の中心）
                    double currentAngle = (i * stepAngle) + (stepAngle / 2);

                    <div class="segment-text" style="transform: rotate(@(currentAngle)deg)">
                        <span class="text">@GetInputList()[i]</span>
                    </div>
                }
            </div>
        </div>
    </div>

    <button class="btn-spin" @onclick="SpinWheel" disabled="@isSpinning">
        @if (isSpinning) { <span>抽選中...</span> } else { <span>スタート！</span> }
    </button>
</div>

@if (showResult)
{
    <div class="modal-overlay" @onclick="CloseModal">
        <div class="modal-content">
            <p class="modal-title">結果は...</p>
            <div class="result-text">@hitItem</div>
            <button class="btn-close" @onclick="CloseModal">閉じる</button>
        </div>
    </div>
}

@code {
    private string InputText = "A\nB\nC\nD\nE";
    
    private double rotationAngle = 0;
    private double transitionSeconds = 0;
    private bool isSpinning = false;
    private bool showResult = false;
    private string hitItem = "";
    private Random random = new Random();

    // 綺麗に見える色のパレット
    private string[] Colors = new[] { "#FF5733", "#33FF57", "#3357FF", "#FF33A8", "#FFC300", "#8E44AD", "#3498DB", "#E67E22" };

    // 入力テキストをリスト化（空行は除外）
    private List<string> GetInputList()
    {
        var list = InputText.Split(new[] { '\r', '\n' }, StringSplitOptions.RemoveEmptyEntries).ToList();
        if (list.Count == 0) return new List<string> { "項目を入力" }; // 空の時のガード
        return list;
    }

    // CSSの conic-gradient（扇形の背景）を動的に作成する文字列
    private string GetConicGradient()
    {
        var list = GetInputList();
        int count = list.Count;
        double step = 100.0 / count; // パーセント計算
        
        var gradientParts = new List<string>();
        for (int i = 0; i < count; i++)
        {
            string color = Colors[i % Colors.Length];
            gradientParts.Add($"{color} {i * step}% {(i + 1) * step}%");
        }
        
        return $"conic-gradient({string.Join(", ", gradientParts)})";
    }

    private async Task SpinWheel()
    {
        if (isSpinning) return;

        isSpinning = true;
        showResult = false;
        
        int extraSpin = random.Next(0, 360); 
        rotationAngle += 1800 + extraSpin; 
        
        transitionSeconds = 4;
        StateHasChanged();

        await Task.Delay(4100); // 回転時間+少し待機

        CalculateResult(rotationAngle);
        isSpinning = false;
        showResult = true;
    }

    private void CalculateResult(double finalAngle)
    {
        var list = GetInputList();
        int count = list.Count;
        double anglePerItem = 360.0 / count;

        // 角度の正規化 (0-360)
        double normalized = finalAngle % 360;
        
        // 針は上(0度)固定。盤面が回るので、逆算してどの区画が上に来たか求める
        // 補正：(360 - 回転角度) が「12時から見て右回りに何度ズレたか」
        double stopAngle = (360 - normalized) % 360;

        // どのインデックスの領域か
        int index = (int)(stopAngle / anglePerItem);

        // 配列外参照防止
        if (index >= count) index = 0;
        
        hitItem = list[index];
    }

    private void CloseModal()
    {
        showResult = false;
    }
}

