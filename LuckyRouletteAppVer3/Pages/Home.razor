@page "/"
@using System.Threading

<PageTitle>Royal Roulette</PageTitle>

<div class="casino-table">
    <div class="title-area">
        <h1>🎰 ROYAL ROULETTE</h1>
        <p>本日の運勢を占おう</p>
    </div>

    <div class="roulette-container">
        <div class="marker">▼</div>

        <div class="wheel-border">
            <div class="wheel" style="transform: rotate(@(rotationAngle)deg); transition: transform @(transitionSeconds)s cubic-bezier(0.25, 0.1, 0.25, 1);">
                @for (int i = 0; i < 8; i++)
                {
                    <div class="segment" style="transform: rotate(@(i * 45)deg)">
                        <span class="number">@(Numbers[i])</span>
                    </div>
                }
            </div>
        </div>
    </div>

    <button class="btn-spin" @onclick="SpinWheel" disabled="@isSpinning">
        @if (isSpinning)
        {
            <span>SPINNING...</span>
        }
        else
        {

            <span>SPIN!</span>
        }
    </button>
</div>

@if (showResult)
{
    <div class="modal-overlay" @onclick="CloseModal">
        <div class="modal-content">
            <h2>RESULT</h2>
            <div class="result-number">@hitNumber</div>
            <p>@resultMessage</p>
            <button class="btn-close" @onclick="CloseModal">閉じる</button>
        </div>
    </div>
}

@code {
    // 8分割の数字定義 (時計回りの配置)
    private readonly string[] Numbers = new[] { "1", "2", "3", "4", "5", "6", "7", "8" };

    private double rotationAngle = 0;
    private double transitionSeconds = 0;
    private bool isSpinning = false;
    private bool showResult = false;
    private string hitNumber = "";
    private string resultMessage = "";
    private Random random = new Random();

    private async Task SpinWheel()
    {
        if (isSpinning) return;

        isSpinning = true;
        showResult = false; // 結果を隠す

        // 回転数決定 (最低5回転 + ランダム)
        int extraSpin = random.Next(0, 360);
        rotationAngle += 1800 + extraSpin; // 1800度 = 5回転

        transitionSeconds = 5; // 5秒かけて止まる（よりリアルに）
        StateHasChanged();

        // 回転終了を待つ
        await Task.Delay(5000);

        CalculateResult(rotationAngle);
        isSpinning = false;
        showResult = true; // 結果を出す
    }

    private void CalculateResult(double finalAngle)
    {
        // 角度を正規化 (0-360)
        double normalized = finalAngle % 360;

        // 針は上(0度)にあるが、盤が回るので計算は逆回転
        // 1区画は45度 (360 / 8)
        // 補正計算
        double corrected = (360 - normalized + 22.5) % 360;
        int index = (int)(corrected / 45);

        hitNumber = Numbers[index];

        // 偶数・奇数でメッセージを変える
        if (int.Parse(hitNumber) % 2 == 0)
        {
            resultMessage = "偶数！ 黒の勝利！⚫";
        }
        else
        {
            resultMessage = "奇数！ 赤の勝利！🔴";
        }
    }

    private void CloseModal()
    {
        showResult = false;
    }
}

