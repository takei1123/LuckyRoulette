@page "/"
@using System.Threading
@using System.Text.Json
@using System.Text
@using System.Web
@inject IJSRuntime JSRuntime
@inject NavigationManager NavManager

<PageTitle>ラッキールーレット</PageTitle>

<div class="casino-table">
    <div class="title-area">
        <h1>🏆 ラッキールーレット</h1>
        <p class="main-subtitle">回せ運命！ 減らせ選択肢！ 最後に笑うのはアイツだ！</p>
        <p class="sub-description">
            「クロちゃん」を含む名前 → 勝手に道連れ発動<br>
            「ひょうろく」を含む名前 → 勝手に復活発動
        </p>
    </div>

    <div class="debug-log">
        📜 ログ: @DebugLog
    </div>

    <div class="preset-area">
        <div class="preset-save">
            <input class="preset-input" @bind="NewPresetName" @oninput="CheckOverwrite" placeholder="リスト名" />
            <button class="@(IsOverwrite ? "btn-update" : "btn-save")" @onclick="SavePreset">
                @(IsOverwrite ? "🔄 更新" : "💾 保存")
            </button>
        </div>

        <div class="share-area">
            <button class="btn-share" @onclick="CopyShareLink">
                🔗 このリストを共有
            </button>
            @if (showCopyMessage)
            {
                <span class="copy-msg">コピーしました！</span>
            }
        </div>

        @if (Presets.Count > 0)
        {
            <div class="preset-list">
                @foreach (var preset in Presets)
                {
                    <div class="preset-item">
                        <span class="preset-name">@preset.Name</span>
                        <div class="preset-actions">
                            <button class="btn-load" @onclick="() => LoadPreset(preset)">📂 読込</button>
                            <button class="btn-delete" @onclick="() => DeletePreset(preset)">🗑️</button>
                        </div>
                    </div>
                }
            </div>
        }
    </div>

    <div class="options-area">
        <div class="option-row">
            <label class="checkbox-label">
                <input type="checkbox" @bind="removeWinner" />
                <span class="checkbox-text">当たった項目を削除する</span>
            </label>
            <button class="btn-bgm @(isBgmOn ? "bgm-on" : "bgm-off")" @onclick="ToggleBgm">
                @(isBgmOn ? "🔊 BGM: ON" : "🔇 BGM: OFF")
            </button>
        </div>
        <div style="text-align:center; font-size:0.8rem; color:#bdc3c7; margin-top:5px;">
            🪦 墓場の住人: @Graveyard.Count 人
            (@(Graveyard.Count > 0 ? Graveyard.Last() + " が待機中" : "空っぽ"))
        </div>
    </div>

    <div class="input-area">
        <textarea value="@InputText" @oninput="UpdateRoulette" disabled="@isSpinning" placeholder="項目を入力"></textarea>
    </div>

    <div class="roulette-container">
        <div class="marker">▼</div>
        
        <div class="wheel-border">
            <div class="wheel" style="transform: rotate(@(rotationAngle)deg); transition: transform @(transitionSeconds)s cubic-bezier(0.25, 0.1, 0.25, 1); background: @(string.IsNullOrEmpty(CurrentGradient) ? "conic-gradient(#ccc 0% 100%)" : CurrentGradient);">
                @foreach (var seg in Segments)
                {
                    <div class="segment-text" style="transform: rotate(@(seg.CenterAngle)deg)">
                        <span class="text">@seg.Name</span>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="action-buttons">
        <button class="btn-spin" @onclick="SpinWheel" disabled="@(isSpinning || Segments.Count == 0 || (Segments.Count == 1 && Segments[0].Name == "項目を入力"))">
            @if (isSpinning) { <span>抽選中...</span> } else { <span>スタート！</span> }
        </button>

        <button class="btn-reset" @onclick="ResetList" disabled="@isSpinning">
            🔄 最初の状態に戻す
        </button>
        
        <button class="btn-mirumo" @onclick="OpenMirumo">
            🧚‍♀️ ミルモでポ！
        </button>
    </div>
</div>

@if (showResult)
{
    <div class="modal-overlay" @onclick="CloseModal">
        <div class="modal-content">
            <p class="modal-title">結果は...</p>
            <div class="result-text">@hitItem</div>
            <p class="modal-note">
                @if (!string.IsNullOrEmpty(hitRuleDescription))
                {
                    <span style="color:#e67e22; font-weight:bold; display:block; margin-bottom:5px;">@hitRuleDescription</span>
                }
                @(removeWinner ? "※閉じて次へ（処理が実行されます）" : "※閉じて次へ")
            </p>
            <button class="btn-modal-close" @onclick="CloseModal">閉じる</button>
        </div>
    </div>
}

@if (showMirumo)
{
    <div class="modal-overlay" @onclick="CloseMirumo">
        <div class="modal-content mirumo-style">
            <div class="mirumo-text">ミルモでポ！</div>
            <button class="btn-modal-close" @onclick="CloseMirumo">閉じる</button>
        </div>
    </div>
}

