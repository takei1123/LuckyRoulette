        color: #e74c3c;
        z-index: 10;
        filter: drop-shadow(0 2px 2px rgba(0,0,0,0.5));
    }

    .action-buttons {
        display: flex;
        flex-direction: column;
        gap: 15px;
        align-items: center;
    }

    .btn-spin {
        background: #e74c3c;
        color: white;
        padding: 15px 60px;
        font-size: 1.5rem;
        border-radius: 50px;
        border: none;
        cursor: pointer;
        box-shadow: 0 5px 0 #c0392b;
    }

        .btn-spin:active {
            transform: translateY(5px);
            box-shadow: none;
        }

        .btn-spin:disabled {
            background: #7f8c8d;
            cursor: not-allowed;
            box-shadow: none;
        }

    .btn-reset {
        background: transparent;
        color: #bdc3c7;
        border: 2px solid #bdc3c7;
        padding: 10px 20px;
        border-radius: 30px;
        font-size: 1rem;
        cursor: pointer;
        transition: 0.3s;
    }

        .btn-reset:hover {
            background: rgba(255,255,255,0.1);
            color: white;
            border-color: white;
        }

    .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.7);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 100;
        animation: fadeIn 0.3s;
    }

