        height: 320px;
        border-radius: 50%;
        background: white;
        padding: 5px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.5);
    }

    .wheel {
        width: 100%;
        height: 100%;
        border-radius: 50%;
        position: relative;
    }

    .segment-text {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        display: flex;
        justify-content: center;
        pointer-events: none;
    }

    .text {
        margin-top: 20px;
        font-weight: bold;
        color: white;
        font-size: 18px;
        text-shadow: 1px 1px 3px rgba(0,0,0,0.8);
        writing-mode: vertical-rl;
        max-height: 100px;
    }

    .marker {
        position: absolute;
        top: -25px;
        left: 50%;
        transform: translateX(-50%);
        font-size: 40px;
        color: #e74c3c;
        z-index: 10;
        filter: drop-shadow(0 2px 2px rgba(0,0,0,0.5));
    }

    .btn-spin {
        background: #e74c3c;
        color: white;
        padding: 15px 60px;
        font-size: 1.5rem;
        border-radius: 50px;
        border: none;
        cursor: pointer;
        box-shadow: 0 5px 0 #c0392b;
    }

        .btn-spin:active {
            transform: translateY(5px);
            box-shadow: none;
        }

        .btn-spin:disabled {
            background: #7f8c8d;
            cursor: not-allowed;
        }

    .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.7);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 100;
        animation: fadeIn 0.3s;
    }

    .modal-content {
        background: white;
        padding: 40px;
        border-radius: 15px;
        text-align: center;
        color: #333;
        min-width: 300px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.5);
        animation: popUp 0.4s;
    }

    .modal-title {
        font-size: 1.2rem;
        color: #7f8c8d;
        margin-bottom: 5px;
    }

    .result-text {
        font-size: 3rem;
        font-weight: bold;
        color: #e74c3c;
        margin-bottom: 20px;
    }

    .btn-close {
        padding: 10px 30px;
        background: #333;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    @@keyframes popUp {
        from {
            transform: scale(0.5);
        }

        to {
            transform: scale(1);
        }
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }
</style>