        background: white;
        padding: 40px;
        border-radius: 15px;
        text-align: center;
        color: #333;
        min-width: 300px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.5);
        animation: popUp 0.4s;
    }

    .modal-title {
        font-size: 1.2rem;
        color: #7f8c8d;
        margin-bottom: 5px;
    }

    .result-text {
        font-size: 3rem;
        font-weight: bold;
        color: #e74c3c;
        margin-bottom: 10px;
        word-break: break-all;
    }

    .modal-note {
        font-size: 0.9rem;
        color: #e74c3c;
        margin-bottom: 20px;
    }

    .btn-close {
        padding: 10px 30px;
        background: #333;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    @@keyframes popUp {
        from {
            transform: scale(0.5);
        }

        to {
            transform: scale(1);
        }
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }
</style>