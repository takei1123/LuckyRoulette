        background: conic-gradient( #e74c3c 0deg 45deg, #2c3e50 45deg 90deg, #e74c3c 90deg 135deg, #2c3e50 135deg 180deg, #e74c3c 180deg 225deg, #2c3e50 225deg 270deg, #e74c3c 270deg 315deg, #2c3e50 315deg 360deg );
