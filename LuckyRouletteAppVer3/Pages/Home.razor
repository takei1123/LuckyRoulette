@page "/"
@using System.Threading
@using System.Text.Json
@inject IJSRuntime JSRuntime

<PageTitle>ラッキールーレット</PageTitle>

<div class="casino-table">
    <div class="title-area">
        <h1>🏆 ラッキールーレット</h1>
        <p>回せ運命！ 減らせ選択肢！ 最後に笑うのはアイツだ！</p>
    </div>

    <div class="preset-area">
        <div class="preset-save">
            <input class="preset-input" @bind="NewPresetName" @oninput="CheckOverwrite" placeholder="リスト名（例：ランチ）" />

            <button class="@(IsOverwrite ? "btn-update" : "btn-save")" @onclick="SavePreset">
                @(IsOverwrite ? "🔄 リストを更新" : "💾 リストを保存")
            </button>
        </div>

        @if (Presets.Count > 0)
        {
            <div class="preset-list">
                @foreach (var preset in Presets)
                {
                    <div class="preset-item">
                        <span class="preset-name">@preset.Name</span>
                        <div class="preset-actions">
                            <button class="btn-load" @onclick="() => LoadPreset(preset)">📂 読込</button>
                            <button class="btn-delete" @onclick="() => DeletePreset(preset)">🗑️</button>
                        </div>
                    </div>
                }
            </div>
        }
    </div>

    <div class="options-area">
        <label class="checkbox-label">
            <input type="checkbox" @bind="removeWinner" />
            <span class="checkbox-text">当たった項目を削除する</span>
        </label>
    </div>

    <div class="input-area">
        <textarea value="@InputText" @oninput="UpdateRoulette" placeholder="（例）&#10;Aさん&#10;Bさん&#10;Guest1&#10;Guest2"></textarea>
    </div>

    <div class="roulette-container">
        <div class="marker">▼</div>

        <div class="wheel-border">
            <div class="wheel" style="transform: rotate(@(rotationAngle)deg); transition: transform @(transitionSeconds)s cubic-bezier(0.25, 0.1, 0.25, 1); background: @(string.IsNullOrEmpty(CurrentGradient) ? "conic-gradient(#ccc 0% 100%)" : CurrentGradient);">
                @for (int i = 0; i < DisplayItems.Count; i++)
                {
                    var item = DisplayItems[i];
                    double stepAngle = 360.0 / DisplayItems.Count;
                    double currentAngle = (i * stepAngle) + (stepAngle / 2);

                    <div class="segment-text" style="transform: rotate(@(currentAngle)deg)">
                        <span class="text">@item</span>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="action-buttons">
        <button class="btn-spin" @onclick="SpinWheel" disabled="@(isSpinning || DisplayItems.Count == 0 || (DisplayItems.Count == 1 && DisplayItems[0] == "項目を入力"))">
            @if (isSpinning)
            {
                <span>抽選中...</span>
            }
            else
            {

                <span>スタート！</span>
            }
        </button>

        <button class="btn-reset" @onclick="ResetList" disabled="@isSpinning">
            🔄 最初の状態に戻す
        </button>

        <button class="btn-mirumo" @onclick="OpenMirumo">
            🧚‍♀️ ミルモでポ！
        </button>
    </div>
</div>

@if (showResult)
{
    <div class="modal-overlay" @onclick="CloseModal">
        <div class="modal-content">
            <p class="modal-title">結果は...</p>
            <div class="result-text">@hitItem</div>
            <p class="modal-note">
                @(removeWinner ? "※閉じるとこの項目は削除されます" : "※閉じて次へ")
            </p>
            <button class="btn-close" @onclick="CloseModal">閉じる</button>
        </div>
    </div>
}

@if (showMirumo)
{
    <div class="modal-overlay" @onclick="CloseMirumo">
        <div class="modal-content mirumo-style">
            <div class="mirumo-text">ミルモでポ！</div>
            <button class="btn-close" @onclick="CloseMirumo">閉じる</button>
        </div>
    </div>
}

<audio id="se-drum" src="sounds/drum.mp3" loop></audio>
<audio id="se-result" src="sounds/result.mp3"></audio>
<audio id="se-mirumo" src="sounds/mirumo.mp3"></audio>

<script>
    window.playAudio = (id) => {
        var audio = document.getElementById(id);
        if (audio) {
            audio.currentTime = 0;
            audio.play().catch(e => console.log("再生エラー:", e));
        }
    };
    window.stopAudio = (id) => {
        var audio = document.getElementById(id);
        if (audio) {
            audio.pause();
            audio.currentTime = 0;
        }
    };
</script>

@code {
    public class RoulettePreset
    {
        public string Name { get; set; } = "";
        public string Data { get; set; } = "";
    }

    private string InputText = "A賞\nB賞\nWin1\nWin2\n大当たり";
    private string BackupText = "";

    private List<RoulettePreset> Presets = new List<RoulettePreset>();
    private string NewPresetName = "";
    // 上書きモードかどうか判定するフラグ
    private bool IsOverwrite => Presets.Any(p => p.Name == NewPresetName);

    private List<string> DisplayItems = new List<string>();
    private string CurrentGradient = "";
    private bool removeWinner = true;

    private double rotationAngle = 0;
    private double transitionSeconds = 0;
    private bool isSpinning = false;
    private bool showResult = false;
    private bool showMirumo = false;

    private string hitItem = "";
    private Random random = new Random();
    private string[] Colors = new[] { "#FF5733", "#33FF57", "#3357FF", "#FF33A8", "#FFC300", "#8E44AD", "#3498DB", "#E67E22" };

    protected override void OnInitialized()
    {
        Recalculate();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                var savedCurrent = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "roulette-current");
                var savedBackup = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "roulette-backup");
                var savedPresets = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "roulette-presets");

                if (!string.IsNullOrEmpty(savedCurrent))
                {
                    InputText = savedCurrent;
                    BackupText = !string.IsNullOrEmpty(savedBackup) ? savedBackup : savedCurrent;
                }
                else
                {
                    BackupText = InputText;
                }

                if (!string.IsNullOrEmpty(savedPresets))
                {
                    Presets = JsonSerializer.Deserialize<List<RoulettePreset>>(savedPresets) ?? new List<RoulettePreset>();
                }

                Recalculate();
                StateHasChanged();
            }
            catch { }
        }
    }

    // 入力時に上書きチェックを行う
    private void CheckOverwrite(ChangeEventArgs e)
    {
        NewPresetName = e.Value?.ToString() ?? "";
    }

    private async Task SavePreset()
    {
        if (string.IsNullOrWhiteSpace(NewPresetName)) return;

        var existing = Presets.FirstOrDefault(p => p.Name == NewPresetName);
        if (existing != null)
        {
            // 上書き更新
            existing.Data = InputText;
        }
        else
        {
            // 新規作成
            Presets.Add(new RoulettePreset { Name = NewPresetName, Data = InputText });
        }

        // 入力欄はクリアせず、そのまま残しておくと連続保存しやすいですが、
        // 今回は「保存した感」を出すためにあえて残したままにします（再保存＝更新になるため）
        await SavePresetsToStorage();
    }

    private async Task LoadPreset(RoulettePreset preset)
    {
        InputText = preset.Data;
        BackupText = preset.Data;

        // 【重要】読み込んだ時、その名前を入力欄にセットする
        NewPresetName = preset.Name;

        Recalculate();
        await SaveData();
    }

    private async Task DeletePreset(RoulettePreset preset)
    {
        Presets.Remove(preset);
        // もし削除したプリセットの名前が入力欄に残っていたら消す
        if (NewPresetName == preset.Name) NewPresetName = "";

        await SavePresetsToStorage();
    }

    private async Task SavePresetsToStorage()
    {
        var json = JsonSerializer.Serialize(Presets);
        await JSRuntime.InvokeVoidAsync("localStorage.setItem", "roulette-presets", json);
    }

    private async Task UpdateRoulette(ChangeEventArgs e)
    {
        InputText = e.Value?.ToString() ?? "";
        BackupText = InputText;
        Recalculate();
        await SaveData();
    }

    private async Task ResetList()
    {
        InputText = BackupText;
        Recalculate();
        await SaveData();
    }

    private async Task SaveData()
    {
        await JSRuntime.InvokeVoidAsync("localStorage.setItem", "roulette-current", InputText);
        await JSRuntime.InvokeVoidAsync("localStorage.setItem", "roulette-backup", BackupText);
    }

    private async Task OpenMirumo()
    {
        showMirumo = true;
        await JSRuntime.InvokeVoidAsync("playAudio", "se-mirumo");
    }

    private void CloseMirumo()
    {
        showMirumo = false;
    }

    private void Recalculate()
    {
        var list = InputText.Split(new[] { '\r', '\n' }, StringSplitOptions.RemoveEmptyEntries).ToList();
        if (list.Count == 0) list.Add("項目を入力");
        DisplayItems = list;

        int count = DisplayItems.Count;
        double step = 100.0 / count;
        var gradientParts = new List<string>();
        for (int i = 0; i < count; i++)
        {
            string color = Colors[i % Colors.Length];
            gradientParts.Add($"{color} {i * step}% {(i + 1) * step}%");
        }
        CurrentGradient = $"conic-gradient({string.Join(", ", gradientParts)})";
    }

    private async Task SpinWheel()
    {
        if (isSpinning) return;
        isSpinning = true;
        showResult = false;
        showMirumo = false;

        await JSRuntime.InvokeVoidAsync("playAudio", "se-drum");

        int extraSpin = random.Next(0, 360);
        rotationAngle += 1800 + extraSpin;
        transitionSeconds = 4;
        StateHasChanged();

        await Task.Delay(4100);

        await JSRuntime.InvokeVoidAsync("stopAudio", "se-drum");
        await JSRuntime.InvokeVoidAsync("playAudio", "se-result");

        CalculateResult(rotationAngle);
        isSpinning = false;
        showResult = true;
    }

    private void CalculateResult(double finalAngle)
    {
        int count = DisplayItems.Count;
        double anglePerItem = 360.0 / count;
        double normalized = finalAngle % 360;
        double stopAngle = (360 - normalized) % 360;
        int index = (int)(stopAngle / anglePerItem);
        if (index >= count) index = 0;
        hitItem = DisplayItems[index];
    }

    private async Task CloseModal()
    {
        showResult = false;
        if (removeWinner)
        {
            var list = InputText.Split(new[] { '\r', '\n' }, StringSplitOptions.RemoveEmptyEntries).ToList();
            list.Remove(hitItem);
            InputText = string.Join("\n", list);
            Recalculate();
            await JSRuntime.InvokeVoidAsync("localStorage.setItem", "roulette-current", InputText);
        }
    }
}

