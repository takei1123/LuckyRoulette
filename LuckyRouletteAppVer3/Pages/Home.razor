@page "/"
@using System.Threading

<PageTitle>Dynamic Roulette Fixed</PageTitle>

<div class="casino-table">
    <div class="title-area">
        <h1>🎯 完全カスタム・ルーレット</h1>
        <p>項目を入れると即座に反映されます</p>
    </div>

    <div class="input-area">
        <textarea value="@InputText" @oninput="UpdateRoulette" placeholder="（例）&#10;焼肉&#10;寿司&#10;パスタ"></textarea>
    </div>

    <div class="roulette-container">
        <div class="marker">▼</div>

        <div class="wheel-border">
            <div class="wheel" style="transform: rotate(@(rotationAngle)deg); transition: transform @(transitionSeconds)s cubic-bezier(0.25, 0.1, 0.25, 1); background: @CurrentGradient;">

                @for (int i = 0; i < DisplayItems.Count; i++)
                {
                    var item = DisplayItems[i];
                    double stepAngle = 360.0 / DisplayItems.Count;
                    double currentAngle = (i * stepAngle) + (stepAngle / 2);

                    <div class="segment-text" style="transform: rotate(@(currentAngle)deg)">
                        <span class="text">@item</span>
                    </div>
                }
            </div>
        </div>
    </div>

    <button class="btn-spin" @onclick="SpinWheel" disabled="@isSpinning">
        @if (isSpinning)
        {
            <span>抽選中...</span>
        }
        else
        {

            <span>スタート！</span>
        }
    </button>
</div>

@if (showResult)
{
    <div class="modal-overlay" @onclick="CloseModal">
        <div class="modal-content">
            <p class="modal-title">結果は...</p>
            <div class="result-text">@hitItem</div>
            <button class="btn-close" @onclick="CloseModal">閉じる</button>
        </div>
    </div>
}

@code {
    // 初期値
    private string InputText = "1位\n2位\n3位";

    // 画面表示用のリスト（これを元に描画します）
    private List<string> DisplayItems = new List<string>();

    // 背景色CSS
    private string CurrentGradient = "";

    private double rotationAngle = 0;
    private double transitionSeconds = 0;
    private bool isSpinning = false;
    private bool showResult = false;
    private string hitItem = "";
    private Random random = new Random();

    // カラーパレット
    private string[] Colors = new[] { "#FF5733", "#33FF57", "#3357FF", "#FF33A8", "#FFC300", "#8E44AD", "#3498DB", "#E67E22" };

    // 初期化時に一度計算する
    protected override void OnInitialized()
    {
        Recalculate();
    }

    // 【修正点】文字が打たれるたびに呼ばれる処理
    private void UpdateRoulette(ChangeEventArgs e)
    {
        // 入力された文字を取得して更新
        InputText = e.Value?.ToString() ?? "";
        Recalculate();
    }

    // リストと背景色を再計算するメソッド
    private void Recalculate()
    {
        // リストの更新
        var list = InputText.Split(new[] { '\r', '\n' }, StringSplitOptions.RemoveEmptyEntries).ToList();
        if (list.Count == 0) list.Add("項目を入力");
        DisplayItems = list;

        // 背景色（グラデーション）の更新
        int count = DisplayItems.Count;
        double step = 100.0 / count;
        var gradientParts = new List<string>();

        for (int i = 0; i < count; i++)
        {
            string color = Colors[i % Colors.Length];
            gradientParts.Add($"{color} {i * step}% {(i + 1) * step}%");
        }
        CurrentGradient = $"conic-gradient({string.Join(", ", gradientParts)})";
    }

    private async Task SpinWheel()
    {
        if (isSpinning) return;

        isSpinning = true;
        showResult = false;

        int extraSpin = random.Next(0, 360);
        rotationAngle += 1800 + extraSpin;

        transitionSeconds = 4;
        StateHasChanged();

        await Task.Delay(4100);

        CalculateResult(rotationAngle);
        isSpinning = false;
        showResult = true;
    }

    private void CalculateResult(double finalAngle)
    {
        int count = DisplayItems.Count;
        double anglePerItem = 360.0 / count;
        double normalized = finalAngle % 360;
        double stopAngle = (360 - normalized) % 360;

        int index = (int)(stopAngle / anglePerItem);
        if (index >= count) index = 0;

        hitItem = DisplayItems[index];
    }

    private void CloseModal()
    {
        showResult = false;
    }
}

<style>
    .casino-table {
        background-color: #2c3e50;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        font-family: 'Helvetica Neue', Arial, sans-serif;
