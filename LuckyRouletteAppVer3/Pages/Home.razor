        transform: translateX(-50%);
        font-size: 40px;
        color: #f1c40f; /* ゴールドの針 */
        z-index: 10;
        filter: drop-shadow(0 2px 2px rgba(0,0,0,0.5));
    }

    /* スピンボタン */
    .btn-spin {
        background: linear-gradient(to bottom, #e74c3c, #c0392b);
        border: 2px solid #f1c40f;
        color: white;
        padding: 15px 60px;
        font-size: 1.5rem;
        border-radius: 50px;
        cursor: pointer;
        box-shadow: 0 5px 0 #96281b;
        transition: transform 0.1s;
    }

        .btn-spin:active {
            transform: translateY(5px);
            box-shadow: none;
        }

        .btn-spin:disabled {
            background: #95a5a6;
            border-color: #7f8c8d;
            box-shadow: none;
            cursor: not-allowed;
        }

    /* 結果ポップアップ (モーダル) */
    .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.7);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 100;
        animation: fadeIn 0.3s;
    }

    .modal-content {
        background: white;
        padding: 30px;
        border-radius: 15px;
        text-align: center;
        color: #333;
        width: 80%;
        max-width: 300px;
        border: 5px solid #f1c40f;
        animation: popUp 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    .result-number {
        font-size: 4rem;
        font-weight: bold;
        color: #c0392b;
        margin: 10px 0;
    }

    .btn-close {
        margin-top: 15px;
        padding: 10px 30px;
        background: #333;
        color: white;
        border: none;
        border-radius: 5px;
    }

    @@keyframes popUp {
        from {
            transform: scale(0.5);
            opacity: 0;
        }

        to {
            transform: scale(1);
            opacity: 1;
        }
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }
</style>