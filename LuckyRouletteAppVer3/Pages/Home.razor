@code {
    public class RoulettePreset { public string Name { get; set; } = ""; public string Data { get; set; } = ""; }
    
    public class RouletteSegment
    {
        public string Name { get; set; } = "";
        public int Weight { get; set; } = 1;
        public string Rule { get; set; } = "";
        public double StartAngle { get; set; }
        public double EndAngle { get; set; }
        public double CenterAngle => StartAngle + (EndAngle - StartAngle) / 2;
    }

    // 初期値から呪文を削除しました
    private string InputText = "アイドル\n芸人A\n芸人B\nクロちゃん\nひょうろく";
    private string BackupText = "";
    private string DebugLog = "待機中...";
    
    private List<RoulettePreset> Presets = new List<RoulettePreset>();
    private string NewPresetName = "";
    private bool IsOverwrite => Presets.Any(p => p.Name == NewPresetName);
    private bool showCopyMessage = false;

    private List<RouletteSegment> Segments = new List<RouletteSegment>();
    private List<string> Graveyard = new List<string>();
    
    private string CurrentGradient = "";
    private bool removeWinner = true; 
    private bool isBgmOn = false;

    private double rotationAngle = 0;
    private double transitionSeconds = 0;
    private bool isSpinning = false;
    private bool showResult = false;
    private bool showMirumo = false;
    
    private string hitItem = "";
    private string hitRuleDescription = ""; 
    private Random random = new Random();
    private string[] Colors = new[] { "#FF5733", "#33FF57", "#3357FF", "#FF33A8", "#FFC300", "#8E44AD", "#3498DB", "#E67E22" };

    protected override void OnInitialized()
    {
        CheckUrlForSharedData();
        Recalculate();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                var uri = NavManager.ToAbsoluteUri(NavManager.Uri);
                bool hasShareData = System.Web.HttpUtility.ParseQueryString(uri.Query).Get("data") != null;
                if (!hasShareData)
                {
                    var savedCurrent = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "roulette-current");
                    var savedBackup = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "roulette-backup");
                    if (!string.IsNullOrEmpty(savedCurrent))
                    {
                        InputText = savedCurrent;
                        BackupText = !string.IsNullOrEmpty(savedBackup) ? savedBackup : savedCurrent;
                        Recalculate();
                        StateHasChanged(); 
                    }
                }
                var savedPresets = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "roulette-presets");
                if (!string.IsNullOrEmpty(savedPresets))
                {
                    Presets = JsonSerializer.Deserialize<List<RoulettePreset>>(savedPresets) ?? new List<RoulettePreset>();
                    StateHasChanged();
                }
            }
            catch {}
        }
    }
    
    private async Task ToggleBgm() { isBgmOn = !isBgmOn; await JSRuntime.InvokeVoidAsync("toggleBgm", isBgmOn); }
    private void CheckUrlForSharedData() { 
        try {
            var uri = NavManager.ToAbsoluteUri(NavManager.Uri);
            var query = System.Web.HttpUtility.ParseQueryString(uri.Query);
            var data = query.Get("data");
            if (!string.IsNullOrEmpty(data)) {
                var bytes = Convert.FromBase64String(data);
                var decodedText = Encoding.UTF8.GetString(bytes);
                InputText = decodedText; BackupText = decodedText; 
            }
        } catch {}
    }
    private async Task CopyShareLink() {
        var bytes = Encoding.UTF8.GetBytes(InputText);
        var base64 = Convert.ToBase64String(bytes);
        var encodedData = System.Web.HttpUtility.UrlEncode(base64);
        var baseUrl = NavManager.BaseUri;
        var shareUrl = $"{baseUrl}?data={encodedData}";
        await JSRuntime.InvokeVoidAsync("copyToClipboard", shareUrl);
        showCopyMessage = true;
        StateHasChanged();
        await Task.Delay(2000);
        showCopyMessage = false;
        StateHasChanged();
    }
    private void CheckOverwrite(ChangeEventArgs e) { NewPresetName = e.Value?.ToString() ?? ""; }
    private async Task SavePreset() {
        if (string.IsNullOrWhiteSpace(NewPresetName)) return;
        var existing = Presets.FirstOrDefault(p => p.Name == NewPresetName);
        if (existing != null) existing.Data = InputText;
        else Presets.Add(new RoulettePreset { Name = NewPresetName, Data = InputText });
        await SavePresetsToStorage();
    }
    private async Task LoadPreset(RoulettePreset preset) { InputText = preset.Data; BackupText = preset.Data; NewPresetName = preset.Name; Graveyard.Clear(); Recalculate(); await SaveData(); }
    private async Task DeletePreset(RoulettePreset preset) { Presets.Remove(preset); if (NewPresetName == preset.Name) NewPresetName = ""; await SavePresetsToStorage(); }
    private async Task SavePresetsToStorage() { var json = JsonSerializer.Serialize(Presets); await JSRuntime.InvokeVoidAsync("localStorage.setItem", "roulette-presets", json); }
    private async Task UpdateRoulette(ChangeEventArgs e) { InputText = e.Value?.ToString() ?? ""; BackupText = InputText; Recalculate(); await SaveData(); }
    private async Task ResetList() { InputText = BackupText; Graveyard.Clear(); DebugLog = "リセットしました"; Recalculate(); await SaveData(); }
    private async Task SaveData() { await JSRuntime.InvokeVoidAsync("localStorage.setItem", "roulette-current", InputText); await JSRuntime.InvokeVoidAsync("localStorage.setItem", "roulette-backup", BackupText); }
    private async Task OpenMirumo() { showMirumo = true; await JSRuntime.InvokeVoidAsync("playAudio", "se-mirumo"); }
    private void CloseMirumo() { showMirumo = false; }

    private void Recalculate()
    {
        Segments.Clear();
        var lines = InputText.Split(new[] { '\r', '\n' }, StringSplitOptions.RemoveEmptyEntries);

        if (lines.Length == 0)
        {
            Segments.Add(new RouletteSegment { Name = "項目を入力", Weight = 1, StartAngle = 0, EndAngle = 360 });
        }
        else
        {
            foreach (var line in lines)
            {
                var parsed = ParseLine(line);
                
                // ▼▼ 自動ルール付与（名前で判定） ▼▼
                if (string.IsNullOrEmpty(parsed.Rule))
                {
                    if (parsed.Name.Contains("クロちゃん"))
                    {
                        parsed.Rule = "*道連れ";
                    }
                    else if (parsed.Name.Contains("ひょうろく"))
                    {
                        parsed.Rule = "*復活";
                    }
                }
                // ▲▲ ここまで ▲▲

                Segments.Add(new RouletteSegment { Name = parsed.Name, Weight = parsed.Weight, Rule = parsed.Rule });
            }
        }
        
        int totalWeight = Segments.Sum(s => s.Weight);
        double currentAngle = 0;
        var gradientParts = new List<string>();
        for (int i = 0; i < Segments.Count; i++)
        {
            var seg = Segments[i];
            double angleSize = (double)seg.Weight / totalWeight * 360.0;
            seg.StartAngle = currentAngle;
            seg.EndAngle = currentAngle + angleSize;
            string color = Colors[i % Colors.Length];
            double startPercent = (seg.StartAngle / 360.0) * 100;
            double endPercent = (seg.EndAngle / 360.0) * 100;
            gradientParts.Add($"{color} {startPercent}% {endPercent}%");
            currentAngle += angleSize;
        }
        CurrentGradient = $"conic-gradient({string.Join(", ", gradientParts)})";
    }

    private (string Name, int Weight, string Rule) ParseLine(string line)
    {
        string temp = line.Replace("：", ":").Replace("｛", "{").Replace("｝", "}");
        string rule = "";
        int braceStart = temp.IndexOf('{');
        int braceEnd = temp.LastIndexOf('}');
        if (braceStart >= 0 && braceEnd > braceStart)
        {
            rule = temp.Substring(braceStart + 1, braceEnd - braceStart - 1).Trim();
            temp = temp.Substring(0, braceStart).Trim(); 
        }
        int weight = 1;
        var parts = temp.Split(':');
        string name = parts[0].Trim();
        if (parts.Length > 1) 
        {
            int.TryParse(parts[1], out weight);
            if (weight <= 0) weight = 1;
        }
        return (name, weight, rule);
    }

    private async Task SpinWheel()
    {
        if (isSpinning) return;
        isSpinning = true;
        showResult = false;
        showMirumo = false; 
        hitRuleDescription = "";
        DebugLog = "抽選中...";
        
        await JSRuntime.InvokeVoidAsync("playAudio", "se-drum");

        int extraSpin = random.Next(0, 360); 
        rotationAngle += 1800 + extraSpin; 
        transitionSeconds = 4;
        StateHasChanged();
        
        await Task.Delay(4100);
        
        await JSRuntime.InvokeVoidAsync("stopAudio", "se-drum");
        await JSRuntime.InvokeVoidAsync("playAudio", "se-result");

        CalculateResult(rotationAngle);
        isSpinning = false;
        showResult = true;
    }

    private void CalculateResult(double finalAngle)
    {
        double normalized = finalAngle % 360;
        double stopAngle = (360 - normalized) % 360;
        var hitSegment = Segments.FirstOrDefault(s => stopAngle >= s.StartAngle && stopAngle < s.EndAngle);
        
        if (hitSegment != null)
        {
            hitItem = hitSegment.Name;
            
            if (!string.IsNullOrEmpty(hitSegment.Rule))
            {
                if (hitSegment.Rule.Contains("道連れ")) 
                    hitRuleDescription = "⚡ 順番をシャッフルして右隣を道連れにする！";
                else if (hitSegment.Rule.Contains("復活")) 
                    hitRuleDescription = "✨ 順番をシャッフルして消えた誰かを復活させる！";
                else if (hitSegment.Rule.Contains("+")) hitRuleDescription = "追加アイテムが出現！";
                else if (hitSegment.Rule.Contains("-")) hitRuleDescription = "アイテム消滅！";
            }
        }
        else hitItem = Segments[0].Name;
    }

    private async Task CloseModal() 
    { 
        showResult = false;
        
        var lines = InputText.Split(new[] { '\r', '\n' }, StringSplitOptions.RemoveEmptyEntries).ToList();
        var hitSegment = Segments.FirstOrDefault(s => s.Name == hitItem);
        string rule = hitSegment?.Rule ?? "";

        DebugLog = $"当選: {hitItem} (Rule: {rule})";

        if (rule.Contains("道連れ")) 
        {
            ShuffleList(lines);
            int myIndex = lines.FindIndex(l => ParseLine(l).Name == hitItem);
            
            if (myIndex != -1 && lines.Count > 1)
            {
                int targetIndex = (myIndex + 1) % lines.Count;
                string targetName = ParseLine(lines[targetIndex]).Name;
                
                AddToGraveyard(lines[targetIndex]);
                lines.RemoveAt(targetIndex);
                DebugLog += $" -> {targetName}を道連れ";
                
                myIndex = lines.FindIndex(l => ParseLine(l).Name == hitItem);
                if (myIndex != -1)
                {
                    AddToGraveyard(lines[myIndex]);
                    lines.RemoveAt(myIndex);
                    DebugLog += " -> 自爆";
                }
            }
            else if (myIndex != -1)
            {
                 AddToGraveyard(lines[myIndex]);
                 lines.RemoveAt(myIndex);
                 DebugLog += " -> 自爆(道連れなし)";
            }
        }
        else if (rule.Contains("復活")) 
        {
            ShuffleList(lines);
            int myIndex = lines.FindIndex(l => ParseLine(l).Name == hitItem);
            
            if (myIndex != -1)
            {
                if (Graveyard.Count > 0)
                {
                    string revivedLine = Graveyard.Last();
                    string revivedName = ParseLine(revivedLine).Name;
                    Graveyard.RemoveAt(Graveyard.Count - 1);
                    
                    lines[myIndex] = revivedLine;
                    DebugLog += $" -> {revivedName}が復活";
                }
                else
                {
                    AddToGraveyard(lines[myIndex]);
                    lines.RemoveAt(myIndex);
                    DebugLog += " -> 復活失敗(墓場空)";
                }
            }
        }
        else 
        {
            if (removeWinner)
            {
                for (int i = lines.Count - 1; i >= 0; i--)
                {
                    if (ParseLine(lines[i]).Name == hitItem)
                    {
                        AddToGraveyard(lines[i]);
                        lines.RemoveAt(i);
                        DebugLog += " -> 削除";
                        break; 
                    }
                }
            }

            if (!string.IsNullOrEmpty(rule))
            {
                var rules = rule.Split(',');
                foreach (var r in rules)
                {
                    string cmd = r.Trim();
                    if (cmd.StartsWith("+")) 
                    {
                        string addItem = cmd.Substring(1).Trim();
                        lines.Add(addItem);
                        DebugLog += $" -> 追加({addItem})";
                    }
                    else if (cmd.StartsWith("-")) 
                    {
                        string delTarget = cmd.Substring(1).Trim();
                        var targetIndex = lines.FindIndex(l => ParseLine(l).Name == delTarget);
                        if (targetIndex != -1) {
                            AddToGraveyard(lines[targetIndex]);
                            lines.RemoveAt(targetIndex);
                            DebugLog += $" -> 指定削除({delTarget})";
                        }
                    }
                }
            }
        }

        InputText = string.Join("\n", lines);
        Recalculate();
        await SaveData();
    }
    
    private void ShuffleList(List<string> list)
    {
        int n = list.Count;
        while (n > 1)
        {
            n--;
            int k = random.Next(n + 1);
            string value = list[k];
            list[k] = list[n];
            list[n] = value;
        }
        DebugLog += " -> シャッフル";
    }
    
    private void AddToGraveyard(string line) { Graveyard.Add(line); }
}

